{% extends 'banner.html.twig' %}
{% block content %}
    <main>
        <div class="header-container">
            <h2 class="display-4">
                {{ page_heading_2 }}
                <small class="text-muted">{{ page_heading_1 }}</small>
            </h2>
        </div>
        <div class="text-center form-signin">
            <div class="alert alert-danger" role="alert">{{ message }}</div>
            <form action="{{ action }}" method="{{ method }}">
                <img class="mb-4" src="{{ logo_path }}" alt=""
                     width="72" height="72">
                <h1 class="h3 mb-3 font-weight-normal secondary-color">Sign up</h1>
                <div class="form-group login-field">
                    <label for="inputUsername" class="sr-only">Username</label>
                    <input name="username" type="text" id="inputUsername" class="form-control" placeholder="Username"
                           required autofocus pattern="[A-Za-z0-9]{3,19}$" title="Must be between 4 - 20
                           characters long">
                    <small id="emailHelp" class="form-text text-muted helper-text">Please enter a username
                        between 4 and 20 characters, must contain only letters and numbers
                    </small>
                </div>
                <div class="form-group login-field">
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input name="password" type="password" id="inputPassword" class="form-control"
                           placeholder="Password" required pattern="^(?=.*[!@#$%^&*-])(?=.*[0-9])(?=.*[A-Z]).{7,39}$"
                           title="Must contain at least 1 uppercase, 1 lowercase and 1 special character (!@#$%^&*-)
                           between 8 - 40 characters long">
                    <small id="emailHelp" class="form-text text-muted helper-text">Please enter a password containing at
                        least 1 uppercase, 1 lowercase and 1 special character (!@#$%^&*-) between 8 - 40 characters
                        long
                    </small>
                </div>
                <div class="form-group login-field">
                    <label for="inputPasswordConfirm" class="sr-only">Confirm Password</label>
                    <input name="passwordConfirm" type="password" id="inputPasswordConfirm" class="form-control"
                           placeholder="Confirm Password" required
                           pattern="^(?=.*[!@#$%^&*-])(?=.*[0-9])(?=.*[A-Z]).{7,39}$"
                           title="Must contain at least 1 uppercase, 1 lowercase and 1 special character (!@#$%^&*-)
                           between 8 - 40 characters long">
                    <small id="emailHelp" class="form-text text-muted helper-text">Please confirm your password</small>
                </div>
                <button class="btn btn-primary btn-block primary-color" type="submit">Sign up</button>
            </form>
        </div>
    </main>
{% endblock %}